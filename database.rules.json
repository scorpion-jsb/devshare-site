{
  "rules": {
    ".read": "auth !== null",
    ".write": "auth !== null",
    "files": {
      "anon": {
        ".read": true,
        ".write": true
      }
    },
    "usernames": {
      ".read": "auth !== null",
      ".write": "auth !== null"
    },
    "uids": {
      ".read": "auth !== null",
      ".write": "auth !== null"
    },
    "projects": {
      ".read": true,
      ".write": true,
      ".indexOn": ["name", "owner"]
    },
    "users": {
      ".indexOn": ["uid", "username"]
    }
  }
}
